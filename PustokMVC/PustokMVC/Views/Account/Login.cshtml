@model UserLoginViewModel
<div class="site-wrapper" id="top">

	<section class="breadcrumb-section">
		<h2 class="sr-only">Site Breadcrumb</h2>
		<div class="container">
			<div class="breadcrumb-contents">
				<nav aria-label="breadcrumb">
					<ol class="breadcrumb">
						<li class="breadcrumb-item"><a href="index.html">Home</a></li>
						<li class="breadcrumb-item active">Login</li>
					</ol>
				</nav>
			</div>
		</div>
	</section>
	<!--=============================================
	=            Login Register page content         =
	=============================================-->
	<main class="page-section inner-page-sec-padding-bottom">
		<div class="container">
			<div class="row">
				<div class="col-sm-12 col-md-12 col-xs-12 col-lg-6 mb--30 mb-lg--0">
					<!-- Login Form s-->
					<form method="post">
						<div class="login-form">
							<h4 class="login-title">Welcome Again</h4>
							<div class="row">
								
								<div class="col-12 mb--20">
									<label for="email">UsernameOrEmail</label>
									<input class="mb-0 form-control" asp-for="UsernameOrEmail"
										   placeholder="UsernameOrEmail">
									<span  class="text-danger"></span>
								</div>
								<div class="col-lg-6 mb--20">
									<label for="password">Password</label>
									<input class="mb-0 form-control" asp-for="Password"
										   placeholder="Enter your Password">
									<span  class="text-danger"></span>
								</div>
								<div asp-validation-summary="ModelOnly" class="text-danger"></div>
								<div class="col-md-12">
									<button type="submit" class="btn btn-outlined">Login</button>
								</div>
							</div>
						</div>
					</form>
				</div>

			</div>
		</div>
	</main>
</div>
